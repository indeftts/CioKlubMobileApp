<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RegistrationActivity">

    <TextView
        android:textColor="@color/white"
        android:id="@+id/textinregistration"
        android:layout_width="215dp"
        android:layout_height="49dp"

        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="94dp"
        android:layout_marginBottom="663dp"
        android:gravity="center"
        android:text="REGISTRATION"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.043" />

    <ImageView
        android:id="@+id/imagecioregister"
        android:layout_width="112dp"
        android:layout_height="79dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="263dp"
        android:layout_marginBottom="583dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.118"
        tools:layout_editor_absoluteX="144dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="166dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="506dp"

        android:hint="NAME"
        android:inputType="textPersonName"
        android:textColorHint="@color/black" />

    <EditText
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="225dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="461dp"

        android:hint="EMAIL"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/black"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="275dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="410dp"

        android:hint="USERNAME"
        android:inputType="textPersonName"
        android:textColorHint="@color/black"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/buttonmale"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="342dp"
        android:layout_marginEnd="286dp"
        android:layout_marginBottom="338dp"
        android:backgroundTint="@color/yellow"
        android:text="Male" />

    <Button
        android:id="@+id/buttonfemale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="144dp"
        android:layout_marginTop="343dp"
        android:layout_marginEnd="174dp"
        android:layout_marginBottom="340dp"
        android:backgroundTint="@color/yellow"
        android:text="Female" />

    <Button
        android:id="@+id/buttonother"
        android:layout_width="89dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="262dp"
        android:layout_marginTop="342dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="339dp"
        android:backgroundTint="@color/yellow"
        android:text="Other" />

    <EditText
        android:layout_width="345dp"
        android:layout_height="wrap_content"
